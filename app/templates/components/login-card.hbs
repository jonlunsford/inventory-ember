{{#md-card
  onsubmit=attrs.onsubmit
  title='Login to Inventory IO'
  buttonText='Login'
  buttonDisabled=validations.messages.length}}

  <div class="row">
    {{input-field
      value=model.email
      errors=validations.attrs.model.email.messages
      classNames='col s12'
      type='email'
      label='Email'}}
  </div>

  <div class="row">
    {{input-field
      value=model.password
      errors=validations.attrs.model.password.messages
      classNames='col s12'
      type='password'
      label='Password'}}
  </div>

{{/md-card}}
