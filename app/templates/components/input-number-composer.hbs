{{#if editMode}}
  {{input-field
    value=input.label
    onkeyup=setLabel
    label="What is this field called?"
    classNames="col s12 m6 l6"
  }}

  {{input-field
    value=input.value
    type="number"
    onkeyup=setValue
    label="Default value, or leave blank."
    classNames="col s12 m6 l6"
  }}
{{/if}}

{{#if previewMode}}
  <div class="col s12">
    {{#if editMode}}
      <p><strong>Number Field Preview:</strong></p>
    {{/if}}
    {{input-field type="number" value=input.value label=input.label }}
  </div>
{{/if}}
{{yield}}
