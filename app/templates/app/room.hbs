<div class="card room-card">
  <div class="card-content">
    <div class="messages-container">
      {{outlet}}
    </div>
  </div>

  <div class="card-action">
    {{input-field value=model.newMessage classNames="new-message-field"}}

    <button onclick={{route-action 'createMessage' room}} class="btn-floating btn-large z-depth-0 send-button right">
      <i class="material-icons">send</i>
    </button>
  </div>
</div>
