<div class="container">
  <div class="row">
    <div class="col s12 m8 offset-m2">

      {{#md-card title='Rooms'}}
        <ul class="collection">
          {{#each model.rooms as |room|}}
          <li class="collection-item avatar" onclick={{route-action 'enterRoom' room}}>
              <i class="material-icons green circle">chat</i>
              <span class="title">{{room.name}}</span>
              <p class="gray-text">Owner: {{room.owner.email}}</p>
              <span class="secondary-content">
                <i class="material-icons red-text" onclick={{route-action 'removeRoom' room}}>remove_circle </i>
              </span>
            </li>
          {{else}}
            <li class="collection-item">
              No rooms yet...
            </li>
          {{/each}}
        </ul>
      {{/md-card}}

      {{#md-card
        title='Create New Room'
        buttonText='Create'
        onsubmit=(route-action 'createRoom')}}
        <div class="row">
          {{input-field value=model.newRoom.name label="Room Name" classNames='col s12' errors=model.newRoom.errors}}
        </div>
      {{/md-card}}
    </div>
  </div>
</div>
