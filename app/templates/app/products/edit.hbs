{{app-header pageTitle=(concat "Edit " (singularize-string model.name))}}

{{#md-layout}}
  {{#md-card
    buttonText="Update"
    onsubmit=(route-action 'updateProduct')}}

    <div class="mb1"></div>

    <div class="row">
      {{input-field value=model.name label="Name" classNames="col s12"}}
    </div>

    {{#each model.inputs as |input|}}
      {{input-composer input=input editable=false classNames="input-composer--uneditable" }}
    {{/each}}
  {{/md-card}}

{{/md-layout}}
