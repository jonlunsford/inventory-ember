{{app-header pageTitle=(concat "Edit " model.name)}}

{{#md-layout}}
  <div class="row">
    <p class="col s12 caption light m0">After you create your new asset type you
      will be able to add inventory to your new asset type</p>
  </div>

  {{#md-card
    classNames="col s12"
    buttonText="Update Asset Type"
    onsubmit=(route-action "updateCategory")}}

    <div class="row">
      {{input-field
        value=model.name
        label="Asset type name"
        classNames='col s12'
        errors=model.validations.attrs.name.messages
      }}
    </div>
  {{/md-card}}

{{/md-layout}}
